-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
    - if params[:sorting] == "title"
      %th.hilite= link_to 'Movie Title', movies_path(:sorting => :title)
      %th Rating
    - else 
      %th= link_to 'Movie Title', movies_path(:sorting => :title)
      %th Rating
    - if params[:sorting] == "release_date"
      %th.hilite= link_to 'Release Date', movies_path(:sorting => :release_date)
      %th More Info
    - else
      %th= link_to 'Release Date', movies_path(:sorting => :release_date)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
